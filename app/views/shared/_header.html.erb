<% if user_signed_in? %>
<header class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <%= link_to image_tag('/images/logo.png', :size =>'200x100'), root_path %>
        </div>
        <div class="col-md-3">
            <div class="col-md-offset-3">
                <p>ようこそ<%= current_user.last_name %> <%= current_user.first_name%>さん</p>
            </div>
        </div>
        <div class="col-md-7">
            <ul class="nav navbar-nav pull-right">
                <li class="header_icon_box"><%= link_to root_path do %>
                    <i class="fas fa-home fa-2x"></i><p class="header_text">最初のページに戻る</p>
                    <% end %>
                </li>
                <li class="header_icon_box"><%= link_to youtube_search_path do %>
                    <i class="fas fa-search fa-2x"></i><p class="header_text">動画を検索する</p>
                    <% end %>
                </li>
                <li class="header_icon_box"><%= link_to "#" do %>
                    <i class="fas fa-thumbs-up fa-2x"></i><p class="header_text">いいねした動画一覧</p>
                    <% end %>
                </li>
                <li class="header_icon_box"><%= link_to destroy_user_session_path, :method => :delete do %>
                    <i class="fas fa-sign-out-alt fa-2x"></i><p class="header_text">ログアウト</p>
                    <% end %>
                </li>
            </ul>
        </div>
    </div>
</header>
<% else %>
<header class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <%= link_to image_tag('/images/logo.png', :size =>'200x100'), root_path %>
        </div>
        <div class="col-md-3"></div>
        <div class="col-md-7">
            <ul class="nav navbar-nav pull-right">
                <li class="header_icon_box"><%= link_to root_path do %>
                    <i class="fas fa-home fa-2x"></i><p class="header_text">最初のページに戻る</p>
                    <% end %>
                </li>
                <li class="header_icon_box"><%= link_to new_user_session_path do %>
                    <i class="fas fa-sign-in-alt fa-2x"></i><p class="header_text">ログイン</p>
                    <% end %>
                </li>
                <li class="header_icon_box"><%= link_to new_user_registration_path do %>
                    <i class="fas fa-user-plus fa-2x"></i><p class="header_text">新規登録</p>
                    <% end %>
                </li>
                <li class="header_icon_box"><%= link_to youtube_search_path do %>
                    <i class="fas fa-search fa-2x"></i><p class="header_text">動画を検索する</p>
                    <% end %>
                </li>
            </ul>
        </div>
    </div>
</header>
<% end %>
<% if user_signed_in? %>
<header>
    <div>
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <%= link_to image_tag('/images/logo.png', :size =>'200x100'), root_path %>
        </div>
        <div class="collapse navbar-collapse">
            <div class="col-md-offset-3">
                <p>ようこそ<%= current_user.last_name %> <%= current_user.first_name%>さん</p>
            </div>
            <ul class="nav navbar-nav pull-right">
                <li><%= link_to root_path do %>
                    <i class="fas fa-home">最初のページに戻る</i>
                    <% end %>
                </li>
                <li><%= link_to youtube_search_path do %>
                    <i class="fas fa-search">動画を検索する</i>
                    <% end %>
                </li>
                <li><%= link_to "#" do %>
                    <i class="fas fa-thumbs-up">いいねした動画一覧</i>
                    <% end %>
                </li>
                <li><%= link_to destroy_user_session_path, :method => :delete do %>
                    <i class="fas fa-sign-out-alt">ログアウト</i>
                    <% end %>
                </li>
            </ul>
        </div>
    </div>
</header>
<% else %>
<header>
    <div>
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <%= link_to image_tag('/images/logo.png', :size =>'200x100'), root_path %>
        </div>
        <div><p></p></div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav pull-right">
                <li><%= link_to root_path do %>
                    <i class="fas fa-home">最初のページに戻る</i>
                    <% end %>
                </li>
                <li><%= link_to new_user_session_path do %>
                    <i class="fas fa-sign-in-alt">ログイン</i>
                    <% end %>
                </li>
                <li><%= link_to new_user_registration_path do %>
                    <i class="fas fa-user-plus">新規登録</i>
                    <% end %>
                </li>
                <li><%= link_to youtube_search_path do %>
                    <i class="fas fa-search">動画を検索する</i>
                    <% end %>
                </li>
            </ul>
        </div>
    </div>
</header>
<% end %>